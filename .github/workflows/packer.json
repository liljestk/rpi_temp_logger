{
  "builders": [
    {
      "type": "docker",
      "image": "arm32v7/debian:bullseye",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get install -y docker.io",
        "systemctl start docker",
        "systemctl enable docker",
        "apt-get install -y docker-compose",
        "docker-compose --version",
        "git clone -b packer https://github.com/liljestk/rpi_temp_logger.git /app",  // Replace with your Git repo
        "cd /app",
        "docker-compose up -d"
      ]
    }
  ]
}
